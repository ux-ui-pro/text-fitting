{
  "name": "text-fitting",
  "version": "4.1.0",
  "description": "Sets the font size to fill the target width",
  "author": "ux-ui.pro",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ux-ui-pro/text-fitting.git"
  },
  "bugs": {
    "url": "https://github.com/ux-ui-pro/text-fitting/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "targets": {
    "main": {
      "source": "src/index.js"
    },
    "module": {
      "source": "src/index.js"
    }
  },
  "scripts": {
    "clean": "rm -rf dist .parcel-cache",
    "serve": "parcel src/index.html --dist-dir dist --cache-dir .parcel --no-source-maps --open",
    "build": "yarn clean && parcel build",
    "lint:js": "eslint --ext .js",
    "lintfix": "yarn lint:js --fix"
  },
  "devDependencies": {
    "eslint": "^7.32.0 || ^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "parcel": "^2.12.0",
    "postcss-html": "^1.6.0"
  },
  "keywords": [
    "fit",
    "text",
    "size",
    "sizing",
    "font",
    "width",
    "fitting",
    "responsive"
  ]
}
